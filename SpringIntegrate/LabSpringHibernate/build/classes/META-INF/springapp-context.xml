<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
		xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
		xsi:schemaLocation="http://www.springframework.org/schema/beans
							http://www.springframework.org/schema/beans/spring-beans.xsd">
	<!-- Basic Bean Create -->			
	<bean id="propertyPlaceholderConfigurer" class="org.springframework.beans.factory.config.PropertyPlaceholderConfigurer">
			<property name="locations">
				<list>
					<value>classpath:/META-INF/database.properties</value>
					<value>classpath:/META-INF/hibernate.properties</value>
				</list>
			</property>
		</bean>			
	
	 <bean id="dataSource" class="org.apache.commons.dbcp.BasicDataSource" destroy-method="close">
		        <property name="driverClassName" value="${database.driverClassName}"/>
		        <property name="url" value="${database.url}"/>
		        <property name="username" value="${database.username}"/>
		        <property name="password" value="${database.password}"/>
	</bean>
	
	<bean id="sessionFactory" class="org.springframework.orm.hibernate3.annotation.AnnotationSessionFactoryBean">
			<property name="dataSource" ref="dataSource" />
			<property name="hibernateProperties">
				<props>
					<prop key="hibernate.dialect">${hibernate.dialect}</prop>
					<prop key="hibernate.show_sql">${hibernate.show_sql}</prop>
					<prop key="hibernate.format_sql">${hibernate.format_sql}</prop>
					<prop key="hibernate.hbm2ddl.auto">${hibernate.hbm2ddl.auto}</prop>
				</props>
			</property>
	</bean>
		    
		    
	<bean id="APP001Dao" class="com.ss.trainning.dao.impl.APP001DaoImpl">
        <property name="dataSource" ref="dataSource"/>
    </bean>
	<bean id="APP002Dao" class="com.ss.trainning.dao.impl.APP002DaoImpl">
        <property name="dataSource" ref="dataSource"/>
       <bean id="APP003Dao" class="com.ss.trainning.dao.impl.APP003DaoImpl">
        <property name="dataSource" ref="dataSource"/>
    </bean>
    </bean>
</beans>
